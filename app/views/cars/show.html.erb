<div class="contain" style="padding-top: 40px;">
  <div class="show-card">
    <div class="show-card__top">
      <div class="show-card__img">
      </div>
      <div class="show-card__text">
        <div>

              <p><%= @car.model %></p>
              <p><%= @car.price %>€/Jour</p>
              <p><%= @car.brand %>⭐️</p>

            <div>
              <%= link_to "edit", edit_car_path, class: "btn-medium" %>
              <%= link_to 'delete', car_path(@car), class:"btn-medium", data: { turbo_method: :delete, turbo_confirm: "Are you sure ?" }  %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div>
    <div id="reservation">
      <h2>Réservation</h2>

      <%= render 'form_bookings' %>
      <%= link_to "Retour", cars_path, class: "btn-retour" %></div>
    </div>
  </div>
</div>
