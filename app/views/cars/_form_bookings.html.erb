<div class="container">
  <div class="row">
<%= simple_form_for [@car, @booking], data: { controller: 'flatpickr' } do |f| %>
  <%= f.input :startdate, as: :string, required: false, input_html: {id: "range_start", data: { flatpickr_target: "startTime" } }, label:"Start" %>
  <%= f.input :enddate, as: :string, required: false, input_html: {id: "range_end", data: { flatpickr_target: "endTime" } }, label: "End" %>
  <%= f.submit "Go!", class: "btn-medium"%>
  <% end %>
</div>
</div>
